<UserControl x:Class="SSD_Status.WPF.Views.RawValueInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resx="clr-namespace:SSD_Status.WPF.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Background="White">
        <TextBlock HorizontalAlignment="Center" Text="{x:Static resx:Resources.RawValues}"/>
        <ListBox ItemsSource="{Binding RawValues}"/>
        <Button Command="{Binding RefreshRawValues}" Content="{x:Static resx:Resources.Refresh}"/>
    </StackPanel>
</UserControl>
