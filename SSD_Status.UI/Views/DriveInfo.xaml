<UserControl x:Class="SSD_Status.WPF.Views.DriveInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resx="clr-namespace:SSD_Status.WPF.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Background="White">
        <TextBlock Text="{x:Static resx:Resources.DriveInfo}"
                   Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        <DataGrid HeadersVisibility="None" IsReadOnly="True" CanUserAddRows="false" 
                  ItemsSource="{Binding DriveInfo}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="Auto" Binding="{Binding Name}"/>
                <DataGridTextColumn Width="*" Binding="{Binding Value}"/>
            </DataGrid.Columns>
        </DataGrid>        
    </StackPanel>
</UserControl>
